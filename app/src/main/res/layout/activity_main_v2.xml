<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/activity_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:weightSum="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:src="@drawable/logo"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1"
        android:gravity="center">

        <TextView
            android:id="@+id/go_dancing_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Go Dancing..."
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#663300"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:weightSum="1">

        <Button
            android:id="@+id/search_tonight_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="2dp"
            android:text="TONIGHT"
            android:textSize="40dp"
            android:textColor="#333333"
            android:background="@drawable/rounded_button_orange_shade_1" />

        <Button
            android:id="@+id/search_weekend_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="2dp"
            android:text="THIS       WEEKEND"
            android:textSize="40dp"
            android:textColor="#333333"
            android:background="@drawable/rounded_button_orange_shade_2"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <Button
            android:id="@+id/search_custom_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="SEARCH BY DATE"
            android:textSize="40dp"
            android:textColor="#FFCC99"
            android:background="@drawable/rounded_button_grey_shade_1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.08"
        android:weightSum="1"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/retrieving_events_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:indeterminate="true"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:weightSum="1"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/info_layout"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:weightSum="1"
            android:background="@drawable/rounded_button_white_shade_1">

            <ImageView
                android:id="@+id/info_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:src="@drawable/info_icon_64"/>

            <TextView
                android:id="@+id/info_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="APP INFO"
                android:textSize="20dp"
                android:textColor="#5E5755"
                android:gravity="left|center"
                android:paddingBottom="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>